<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@drawable/corners_bg">

    <LinearLayout
        android:id="@+id/dialog_phone_lin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corners_lb_eeeeee"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corners_rb_d43c33"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:layout_above="@id/dialog_phone_lin"
        android:layout_centerHorizontal="true"
        android:background="#CCCCCC" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dialog_phone_lin"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dialog_title_des"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_title_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>