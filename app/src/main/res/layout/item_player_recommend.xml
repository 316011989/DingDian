<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@drawable/item_click_selector">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="105dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/movie_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="@color/c666666"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_title"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/c888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/playCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playActor"
            android:layout_marginTop="6dp"
            android:textColor="@color/c888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/playNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playCate"
            android:layout_marginTop="6dp"
            android:textColor="@color/c888888"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>