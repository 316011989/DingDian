<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1.5dp"
        android:background="@color/cffffff">

    <ImageView
            android:id="@+id/movie_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/movie_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ikicker_gradient_90_66_00"
            android:layout_alignLeft="@id/movie_cover"
            android:layout_alignRight="@id/movie_cover"
            android:layout_alignBottom="@id/movie_cover"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:gravity="bottom|left"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="@color/cffffff"
            android:textSize="10sp"/>

    <TextView
            android:id="@+id/movie_title"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/c444444"
            android:textSize="13sp"/>
</RelativeLayout>