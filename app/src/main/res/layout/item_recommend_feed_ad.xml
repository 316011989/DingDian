<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/feedad_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feedad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedad_img"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/c444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/feedad_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/feedad_img"
        android:layout_margin="3dp"
        android:textColor="@color/cffffff"
        android:textSize="10sp" />


    <FrameLayout
        android:id="@+id/rec_feed_adcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

